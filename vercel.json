{
  "version": 2,
  "packageManager": "pnpm",
  "framework": "vite",
  "build": {
    "command": "pnpm build",
    "outputDirectory": "dist",
    "installCommand": "pnpm install",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- ./package.json ./pnpm-lock.yaml ./vite.config.ts ./src"
}